// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// üë§ USER & AUTH MODELS
// ============================================
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  role          String    @default("user") // user, admin, super_admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  schools  UserSchool[]
  sessions Session[]

  @@map("users")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// ============================================
// üîó USER-SCHOOL RELATIONSHIP (Multi-tenant)
// ============================================
model UserSchool {
  id        String   @id @default(cuid())
  userId    String
  schoolId  String
  role      String   @default("admin") // admin, teacher, viewer
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@unique([userId, schoolId])
  @@map("user_schools")
}

// ============================================
// üè´ SCHOOL MODEL
// ============================================
model School {
  id      String  @id @default(cuid())
  name    String
  address String
  phone   String?
  email   String?

  // üÜï Niveles acad√©micos activos en este colegio
  // Valores: "BASIC", "MIDDLE", o "BASIC,MIDDLE"
  activeAcademicLevels String @default("BASIC,MIDDLE")

  // ‚ö†Ô∏è CAMPOS DEPRECADOS - Mantener solo por compatibilidad con datos existentes
  // Usar ScheduleLevelConfig para nueva funcionalidad
  scheduleStartTime String  @default("08:00")
  scheduleEndTime   String  @default("17:00")
  blockDuration     Int     @default(45)
  breakDuration     Int     @default(15)
  lunchBreakEnabled Boolean @default(true)
  lunchBreakConfig  String  @default("{\"MONDAY\":{\"enabled\":true,\"start\":\"13:00\",\"end\":\"14:00\"},\"TUESDAY\":{\"enabled\":true,\"start\":\"13:00\",\"end\":\"14:00\"},\"WEDNESDAY\":{\"enabled\":true,\"start\":\"13:00\",\"end\":\"14:00\"},\"THURSDAY\":{\"enabled\":true,\"start\":\"13:00\",\"end\":\"14:00\"},\"FRIDAY\":{\"enabled\":true,\"start\":\"13:00\",\"end\":\"14:00\"}}")
  lunchBreakStart   String  @default("13:00")
  lunchBreakEnd     String  @default("14:00")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users        UserSchool[]
  teachers     Teacher[]
  subjects     Subject[]
  courses      Course[]
  schedules    Schedule[]
  levelConfigs ScheduleLevelConfig[] // üÜï Configuraci√≥n por nivel acad√©mico
  students     Student[] // üÜï Alumnos del colegio
  specialDays  SpecialDay[] // üÜï D√≠as especiales/feriados

  @@map("schools")
}

// ============================================
// ‚öôÔ∏è SCHEDULE LEVEL CONFIG (B√°sica/Media)
// ============================================
model ScheduleLevelConfig {
  id            String @id @default(cuid())
  schoolId      String
  academicLevel String // BASIC (1¬∞-8¬∞ B√°sico), MIDDLE (1¬∞-4¬∞ Medio)

  // Horario general
  startTime     String @default("08:00") // Hora inicio jornada
  endTime       String @default("17:00") // Hora fin jornada
  blockDuration Int    @default(45) // Duraci√≥n bloques en minutos (m√∫ltiplo de 15)

  // Recreos expl√≠citos (JSON array)
  // Formato: [{"afterBlock": 2, "duration": 15, "name": "Recreo"}, {"afterBlock": 4, "duration": 45, "name": "Almuerzo"}]
  breaks String @default("[]")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  school  School                       @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  history ScheduleLevelConfigHistory[] // üÜï Historial de cambios

  @@unique([schoolId, academicLevel])
  @@index([schoolId])
  @@map("schedule_level_configs")
}

// ============================================
// üìú SCHEDULE LEVEL CONFIG HISTORY
// ============================================
model ScheduleLevelConfigHistory {
  id            String @id @default(cuid())
  configId      String
  schoolId      String
  academicLevel String

  // Configuraci√≥n hist√≥rica
  startTime     String
  endTime       String
  blockDuration Int
  breaks        String // JSON array

  // Metadata del cambio
  changedBy    String? // userId del que hizo el cambio
  changeReason String? // Raz√≥n del cambio
  createdAt    DateTime @default(now())

  // Relations
  config ScheduleLevelConfig @relation(fields: [configId], references: [id], onDelete: Cascade)

  @@index([configId])
  @@index([schoolId])
  @@index([createdAt])
  @@map("schedule_level_config_history")
}

// ============================================
// üë®‚Äçüè´ TEACHER MODEL
// ============================================
model Teacher {
  id             String   @id @default(cuid())
  schoolId       String
  firstName      String
  lastName       String
  email          String
  phone          String?
  specialization String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  school          School                @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  availability    TeacherAvailability[]
  teacherSubjects TeacherSubject[]
  scheduleBlocks  ScheduleBlock[]

  @@index([schoolId])
  @@map("teachers")
}

// ============================================
// üë®‚Äçüè´ TEACHER AVAILABILITY
// ============================================
model TeacherAvailability {
  id           String   @id @default(cuid())
  teacherId    String
  academicYear Int // A√±o acad√©mico (2024, 2025, etc.) para historial
  dayOfWeek    String // MONDAY, TUESDAY, etc.
  startTime    String // HH:mm format
  endTime      String // HH:mm format
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@unique([teacherId, academicYear, dayOfWeek, startTime, endTime])
  @@index([teacherId])
  @@index([teacherId, academicYear])
  @@map("teacher_availability")
}

// ============================================
// üìö SUBJECT MODEL
// ============================================
model Subject {
  id          String   @id @default(cuid())
  schoolId    String
  name        String
  code        String // e.g., "MAT101"
  description String?
  color       String? // Color hex para visualizaci√≥n
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  school          School           @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacherSubjects TeacherSubject[]
  scheduleBlocks  ScheduleBlock[]

  @@unique([schoolId, code])
  @@index([schoolId])
  @@map("subjects")
}

// ============================================
// üìö TEACHER-SUBJECT (Many-to-Many)
// ============================================
model TeacherSubject {
  id        String   @id @default(cuid())
  teacherId String
  subjectId String
  createdAt DateTime @default(now())

  // Relations
  teacher Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@unique([teacherId, subjectId])
  @@index([teacherId])
  @@index([subjectId])
  @@map("teacher_subjects")
}

// ============================================
// üéì COURSE MODEL
// ============================================
model Course {
  id            String   @id @default(cuid())
  schoolId      String
  name          String // e.g., "1¬∞ B√°sico A"
  grade         String // e.g., "1", "2", "3"
  section       String // e.g., "A", "B", "C"
  academicLevel String // üÜï BASIC (1¬∞-8¬∞ B√°sico), MIDDLE (1¬∞-4¬∞ Medio)
  academicYear  Int
  studentCount  Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  school         School          @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  schedules      Schedule[]
  scheduleBlocks ScheduleBlock[]
  students       Student[] // üÜï Relaci√≥n con alumnos
  attendances    Attendance[] // üÜï Relaci√≥n con asistencias

  @@index([schoolId])
  @@index([academicYear])
  @@index([academicLevel])
  @@map("courses")
}

// ============================================
// üóìÔ∏è SCHEDULE MODEL
// ============================================
model Schedule {
  id           String   @id @default(cuid())
  schoolId     String
  courseId     String
  name         String // e.g., "Horario 1¬∞ B√°sico A - Semestre 1"
  academicYear Int
  semester     Int // 1 or 2
  startDate    DateTime
  endDate      DateTime
  isActive     Boolean  @default(true)

  // üÜï Snapshot de configuraci√≥n con la que fue creado
  configSnapshot String? // JSON: {"startTime": "08:00", "endTime": "17:00", "blockDuration": 45, "academicLevel": "BASIC"}
  isDeprecated   Boolean @default(false) // üÜï Marca si qued√≥ obsoleto por cambio de jornada

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  school School          @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  course Course          @relation(fields: [courseId], references: [id], onDelete: Cascade)
  blocks ScheduleBlock[]

  @@index([schoolId])
  @@index([courseId])
  @@index([academicYear])
  @@index([isActive])
  @@index([isDeprecated]) // üÜï √çndice para filtrar obsoletos
  @@map("schedules")
}

// ============================================
// üóìÔ∏è SCHEDULE BLOCK MODEL
// ============================================
model ScheduleBlock {
  id          String   @id @default(cuid())
  scheduleId  String
  courseId    String
  subjectId   String
  teacherId   String
  dayOfWeek   String // MONDAY, TUESDAY, etc.
  blockNumber Int // 1, 2, 3, etc.
  startTime   String // HH:mm format
  endTime     String // HH:mm format
  duration    Int // Duration in minutes
  classroom   String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  schedule Schedule @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  course   Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  subject  Subject  @relation(fields: [subjectId], references: [id])
  teacher  Teacher  @relation(fields: [teacherId], references: [id])

  @@index([scheduleId])
  @@index([courseId])
  @@index([teacherId])
  @@index([dayOfWeek])
  @@map("schedule_blocks")
}

// ============================================
// üë®‚Äçüéì STUDENTS MODEL (Extendido)
// ============================================
model Student {
  id       String @id @default(cuid())
  schoolId String
  courseId String // Curso actual

  // Datos personales
  firstName String
  lastName  String
  rut       String? // RUT o identificaci√≥n nacional
  birthDate DateTime?
  gender    String? // M, F, Other
  email     String?
  phone     String?
  address   String?

  // Datos acad√©micos
  enrollmentDate   DateTime  @default(now()) // Fecha de ingreso al colegio
  isActive         Boolean   @default(true) // Para alumnos retirados
  withdrawalDate   DateTime? // Fecha de retiro (si aplica)
  withdrawalReason String? // Raz√≥n del retiro

  // Datos del apoderado/tutor
  guardianName     String?
  guardianRelation String? // padre, madre, tutor, abuelo, etc.
  guardianPhone    String?
  guardianEmail    String?
  guardianRut      String?
  guardianAddress  String? // Puede ser diferente a la del alumno

  // Contacto de emergencia (puede ser diferente al apoderado)
  emergencyName     String?
  emergencyPhone    String?
  emergencyRelation String?

  // Informaci√≥n m√©dica
  bloodType         String? // A+, A-, B+, B-, AB+, AB-, O+, O-
  allergies         String? // JSON o texto libre
  medicalConditions String? // JSON o texto libre
  medications       String? // JSON o texto libre
  healthInsurance   String? // Nombre de la isapre/fonasa

  // Metadata
  notes     String? // Notas adicionales
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  school        School                 @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  course        Course                 @relation(fields: [courseId], references: [id], onDelete: Cascade)
  attendances   Attendance[]
  courseHistory StudentCourseHistory[]
  notifications Notification[]

  @@index([schoolId])
  @@index([courseId])
  @@index([isActive])
  @@index([rut])
  @@map("students")
}

// ============================================
// üìö STUDENT COURSE HISTORY (Historial de Cursos)
// ============================================
model StudentCourseHistory {
  id        String @id @default(cuid())
  studentId String
  courseId  String
  schoolId  String

  // Per√≠odo en el curso
  startDate DateTime // Fecha de inicio en este curso
  endDate   DateTime? // Fecha de fin (null si es el curso actual)

  // Raz√≥n del cambio
  changeReason String? // promocion, repitencia, cambio_seccion, ingreso_tardio, etc.
  academicYear Int // A√±o acad√©mico

  // Metadata
  notes     String?
  createdAt DateTime @default(now())

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([courseId])
  @@index([academicYear])
  @@map("student_course_history")
}

// ============================================
// ‚úÖ ATTENDANCE MODEL
// ============================================
model Attendance {
  id        String   @id @default(cuid())
  studentId String
  courseId  String
  date      DateTime // Fecha de la asistencia
  status    String // "present", "absent", "late", "justified"
  notes     String? // Notas adicionales (ej: justificaci√≥n)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course  Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([studentId, date]) // Un alumno solo puede tener un registro de asistencia por d√≠a
  @@index([courseId])
  @@index([date])
  @@index([status])
  @@map("attendances")
}

model Notification {
  id        String    @id @default(cuid())
  studentId String
  type      String // "absence_alert", "low_attendance", "custom"
  title     String
  message   String
  metadata  Json? // Informaci√≥n adicional (ausencias, tel√©fono, etc.)
  isRead    Boolean   @default(false)
  sentAt    DateTime? // Fecha de env√≠o de WhatsApp
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

// ============================================
// üìÖ SPECIAL DAYS (Feriados y D√≠as Especiales)
// ============================================
model SpecialDay {
  id          String   @id @default(cuid())
  schoolId    String
  date        DateTime // Fecha del d√≠a especial
  name        String // Nombre del d√≠a (ej: "Feriado Nacional", "D√≠a del Profesor")
  type        String // holiday, school_event, no_attendance, other
  description String? // Descripci√≥n adicional
  recurring   Boolean  @default(false) // Si se repite cada a√±o
  isActive    Boolean  @default(true) // Para desactivar sin eliminar

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)

  @@index([schoolId])
  @@index([date])
  @@index([type])
  @@index([isActive])
  @@map("special_days")
}
